{% extends 'base.html.twig' %}

{% block title %}Ajouter Directeurs{% endblock %}

{% block body %}


    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <center><h3 style="color: white;">Ajout Directeur</h3></center>
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, welcome back!</h4>
                        <p class="mb-0">Your business dashboard template</p>
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Components</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->
            <div class="row">
                <div class="col-xl-12 col-xxl-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Form step</h4>
                        </div>
                        <div class="card-body">
                                <div>
                                    <h4>Personal Info</h4>
                                    <a href="{{ path('Directeur_list') }}" class="btn btn-warning">Liste Des Directeurs</a>
                                    {{ form_start(form, {'attr':{'class':'tep-form-horizontal'}})  }}
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                {{ form_row(form.prenom, {'attr':{'class':'form-control'}}) }}
                                            </div>
                                            </div>   
                                        </div>  
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.email, {'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>   
                                        </div>  
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.numero, {'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>   
                                        </div>  
                                        <div class="row">
                                            <div class="col-lg-12 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.dateNaissance, {'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>   
                                        </div>      
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.lieuNaissance, {'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>   
                                        </div>  
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.Diplome, {'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>   
                                        </div>        
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.Domaine, {'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>   
                                        </div>  
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.Description, {'attr':{'class':'form-control'}}) }}
                                                </div>
                                            </div>   
                                        </div>  
                                            <center><button type="submit" class="btn btn-primary">Ajouter</button></center>
                                    {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--***********
    

{% endblock %}
