{% extends 'base.html.twig' %}

{% block title %}Ajouter eleves{% endblock %}

{% block body %}


    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <center><h3 style="color: white;">Ajout eleve</h3></center>
    <div class=" justify-content-center align-items-center" style="width: 600px; margin-left:  400px;">
        <a href="{{ path('eleve_list') }}" class="btn btn-warning">Liste Des Eleves</a>
        {{ form_start(form) }}
            {{ form_row(form.nom, {'attr':{'class':'form-control'}}) }}
            {{ form_row(form.prenom, {'attr':{'class':'form-control'}}) }}
            {{ form_row(form.email, {'attr':{'class':'form-control'}}) }}
            {{ form_row(form.numero, {'attr':{'class':'form-control'}}) }}
            <center><button type="submit" class="btn btn-primary">Ajouter</button></center>
        {{ form_end(form) }}
    </div>
{% endblock %}
