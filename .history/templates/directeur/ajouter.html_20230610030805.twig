{% extends 'base.html.twig' %}

{% block title %}Ajouter Directeurs{% endblock %}

{% block body %}


    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
   
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Bienvenu</h4>
                        
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Directeur</a></li>
                    </ol>
                </div>
            </div>
            <!-- row -->
            <div class="row">
                <div class="col-xl-12 col-xxl-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Form step</h4>
                        </div>
                        <div class="card-body">
                                <div>
                                    <h4>Personal Info</h4>
                                    <a href="{{ path('directeur_list') }}" class="btn btn-warning">Liste Des Directeurs</a>
                                    {{ form_start(form, {'attr':{'class':'tep-form-horizontal'}})  }}
                                        <div class="row">
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.nom, {'attr':{type:"text"  ,'class':"form-control" ,'placeholder':"nom" , required:"", 'label':'Nom*'}}) }}
                                                </div>
                                            </div>   
                                         
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.prenom, {'attr':{'class':"form-control" ,'placeholder':"prenom" ,'require':"", 'label':'Prenom*'}}) }}
                                                </div>
                                             
                                            </div>  
                                        
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.email, {'attr':{'class':"form-control", 'placeholder':"exemple@gmail.com", 'require':"", 'label':'Email*'}}) }}
                                                </div>
                                            </div>   
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.numero, {'attr':{'class':"form-control", 'placeholder':"numero", 'require':"", 'label':'Numero*'}}) }}
                                                </div>
                                            </div>   
                                       
                                        
                                            <div class="col-lg-12 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.dateNaissance, {'attr':{'class':"form-control" , 'require':"", 'label':'Date Naissance*'}}) }}
                                                </div>
                                            </div>   
                                             
                                        
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.lieuNaissance, {'attr':{'class':"form-control", 'placeholder':"Lieu Naisance", 'require':"", 'label':'Lieu Naissance*'}}) }}
                                                </div>
                                            </div>   
                                        
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.diplome, {'attr':{'class':"form-control" , 'require':"", 'label':'Diplome*'}}) }}
                                                </div>
                                            </div>   
                                       
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.Domaine, {'attr':{'class':"form-control" ,'placeholder':"domaine", 'require':"", 'label':'Domaine*'}}) }}
                                                </div>
                                            </div>   
                                        
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.Description, {'attr':{'class':"form-control", 'placeholder':"Description", 'require':"", 'label':'Description*'}}) }}
                                                </div>
                                            </div>   
                                        </div>  
                                            <center><button type="submit" class="btn btn-primary">Ajouter</button></center>
                                    {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--***********
    

{% endblock %}
